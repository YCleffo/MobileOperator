<Application x:Class="MobileOperator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MobileOperator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush Color="#000000" x:Key="MainColor"/>
        <SolidColorBrush Color="#3F0FB7" x:Key="ForceColor"/>
        <SolidColorBrush Color="#F45F5F" x:Key="SecondColor"/>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource MainColor}"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondColor}"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="20,4"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button" x:Key="BehaindButton">
            <Setter Property="Background" Value="{StaticResource SecondColor}"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,4"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Application.Resources>
</Application>
