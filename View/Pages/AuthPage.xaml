<Page x:Class="MobileOperator.View.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MobileOperator.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Margin="10" FontSize="20" HorizontalAlignment="Center" >Логин</TextBlock>
            <TextBox x:Name="LogInTextBox"/>
            <TextBlock  Margin="10" FontSize="20" HorizontalAlignment="Center">Пароль</TextBlock>
            <PasswordBox x:Name="PasswordTextBox"/>
            <Button x:Name="SingInButton" Click="SingInButtonClick">Войти</Button>
            <TextBlock x:Name="RegTextBlock" MouseLeftButtonDown="RegTextBlockMouseLeftButtonDown">Зарегистрироваться</TextBlock>
        </StackPanel>
    </Grid>
</Page>
